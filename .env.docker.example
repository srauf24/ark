# =============================================================================
# ARK DEPLOYMENT ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
ARK_ENV=production

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=your-secure-postgres-password-here

# -----------------------------------------------------------------------------
# Authentication (Clerk)
# -----------------------------------------------------------------------------
# Get these from: https://dashboard.clerk.com/
# Backend uses Secret Key, Frontend uses Publishable Key
CLERK_SECRET_KEY=sk_live_REPLACE_WITH_YOUR_CLERK_SECRET_KEY
CLERK_PUBLISHABLE_KEY=pk_live_REPLACE_WITH_YOUR_CLERK_PUBLISHABLE_KEY
CLERK_JWT_ISSUER=https://your-app.clerk.accounts.dev

# Generic auth secret (used for session signing)
ARK_AUTH_SECRET_KEY=generate-a-random-32-character-string

# -----------------------------------------------------------------------------
# Email Service (Resend)
# -----------------------------------------------------------------------------
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Redis (Optional Password)
# -----------------------------------------------------------------------------
# Leave empty for no password (development only)
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Observability (Optional)
# -----------------------------------------------------------------------------
# New Relic APM - Get from: https://one.newrelic.com/
# Leave empty to disable New Relic
NEW_RELIC_LICENSE_KEY=

# Logging level: debug, info, warn, error
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# Frontend URL (for CORS)
# Update this to your actual domain when deploying
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Backend API URL (for frontend to connect)
VITE_API_URL=http://localhost:8080
